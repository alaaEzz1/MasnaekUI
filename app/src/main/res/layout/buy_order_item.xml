<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_22sdp"
    app:cardUseCompatPadding="true"
    android:clipToPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/buy_order_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp"
            android:background="@color/blue_bg"
            android:textColor="@color/white"
            android:text="buy_order title"
            android:gravity="center"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/buy_order_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp"
            android:background="@drawable/order_input"
            android:textColor="@color/blue_bg"
            android:text="buy_order no 10 with date 12-2-2024"
            android:gravity="center"
            android:textSize="@dimen/_13ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/buy_order_delivery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp"
                android:layout_weight="1"
                android:background="@drawable/order_input"
                android:textColor="@color/blue_bg"
                android:text="Reyad-saudi"
                android:gravity="center"
                android:textSize="@dimen/_13ssp" />

            <TextView
                android:id="@+id/buy_order_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp"
                android:background="@drawable/order_input"
                android:textColor="@color/blue_bg"
                android:layout_weight="1"
                android:text="value = 100 SAR"
                android:gravity="center"
                android:textSize="@dimen/_13ssp" />

        </LinearLayout>

        <TextView
            android:id="@+id/buy_order_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp"
            android:background="@drawable/order_input"
            android:textColor="@color/blue_bg"
            android:layout_weight="1"
            android:text="buy_order value = 100 SAR"
            android:gravity="center"
            android:textSize="@dimen/_13ssp" />

        <TextView
            android:id="@+id/buy_order_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp"
            android:background="@drawable/order_input"
            android:textColor="@color/blue_bg"
            android:layout_weight="1"
            android:text="buy_order value = 100 SAR"
            android:gravity="center"
            android:textSize="@dimen/_13ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buy_order_full_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_shape"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp"
                android:text="Full Details"
                android:textAllCaps="false"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>